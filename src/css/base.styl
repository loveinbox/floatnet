html,
body
  margin 0
  min-width 340px
  height 100%
  font-size 12px
  font-family Verdana, Geneva, sans-serif

h1
  display inline-block
  letter-spacing 15px
  font-size 30px
  margin 45px 40px

a
  color inherit
  text-decoration none

p
  margin 0

table
  table-layout fixed
  width 100%
  border-collapse collapse
  border-spacing 0
  text-align center
  font-size 0

td
  height 1px
  padding 0
  background #f2f2f2

ul
  list-style none
  padding 0
  margin 0 

.page-footer
  margin 40px 0 10px
  text-align center